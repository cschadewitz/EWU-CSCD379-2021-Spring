@model UserViewModel

<h1 class="bg-red-500 text-xl">User - @ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Users" asp-action="@ViewData["Title"]" method="post">
            <div class="form-group flex mb-6">
                <div class="flex w-1/2">
                    <div class="w-1/3">
                        <label asp-for="FirstName" class="control-label"></label>
                    </div>
                    <div class="w-2/3">
                        <input type="text" asp-for="FirstName" class="form-control" />
                    </div>
                </div>
                <div class="flex w-1/2">
                    <div class="w-1/3">
                        <label asp-for="LastName" class="control-label"></label>
                    </div>
                    <div class="w-2/3">
                        <input type="text" asp-for="LastName" class="form-control" />
                    </div>
                </div>
            </div>
            <button class="btn btn-gray">Save</button>
            <a class="btn btn-gray" asp-action="Index">Cancel</a>
            <div class="text-2xl text-red-700" asp-validation-summary="All"></div>
        </form>
    </div>
</div>