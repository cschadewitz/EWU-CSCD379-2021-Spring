@model UserViewModel

<h1>@ViewData["Title"]</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Users" asp-action="@ViewData["Title"]" method="post">
            <div class="form-group flex mb-6">
                <div class="flex w-1/2">
                    <div class="w-1/3">
                        <label asp-for="FirstName" class="control-label"></label>
                    </div>
                    <div class="w-2/3">
                        <input type="text" asp-for="FirstName" class="form-control focus:ring-2 focus:ring-primary-50" />
                    </div>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
                <div class="flex w-1/2">
                    <div class="w-1/3">
                        <label asp-for="LastName" class="control-label"></label>
                    </div>
                    <div class="w-2/3">
                        <input type="text" asp-for="LastName" class="form-control focus:ring-2 focus:ring-primary-50" />
                    </div>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <button class="border border-6 border-primary-70 rounded-full p-3 bg-primary-10">Save</button>
            <a class="border border-6 border-primary-70 rounded-full p-3 bg-primary-10" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>