@model GroupViewModel
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Groups" asp-action="@ViewData.Eval("Action")" method="post">
            <div class="form-group flex mb-6">
                <div class="flex w-1/2">
                    <div class="w-1/3">
                        <label asp-for="GroupName" class="control-label"></label>
                    </div>
                    <div class="w-2/3">
                        <input type="text" asp-for="GroupName" class="form-control" />
                    </div>
                </div>
            </div>
            <button class="btn-gray">Save</button>
            <a class="btn-gray" asp-action="Index">Cancel</a>
            <div class="text-2xl text-red-700" asp-validation-summary="All"></div>
        </form>
    </div>
</div>
