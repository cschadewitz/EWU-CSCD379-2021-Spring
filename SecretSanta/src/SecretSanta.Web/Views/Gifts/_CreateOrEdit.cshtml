@model GiftViewModel


<h1>@ViewData["Title"]</h1>

<h4>Gift</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Gifts" asp-action="@ViewData["Title"]" method="post">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>:
                <input type="text" asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>:
                <input type="text" asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>:
                <input type="text" asp-for="Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>:
                <input type="text" asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>:
                <select asp-for="UserId" asp-items="@(new SelectList(MockData.Users, "Id", "FullName"))" class="form-control">
                    <option>Users</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <button>Save</button>
            <a asp-action="Index">Cancel</a>
        </form>
    </div>
</div>
